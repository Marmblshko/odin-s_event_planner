<div class="mt-8">
  <div class="mb-6">
    <p class="text-xl font-semibold">Create Event</p>
    <div>
      <%= link_to "Add event", new_event_path, class: "bg-blue-500 text-white py-2 px-4 rounded" %>
    </div>
  </div>

  <div>
    <h3 class="text-2xl font-semibold">Future Events</h3>
    <ul class="list-disc pl-5">
      <%= render partial: 'event_list', locals: { events: @events.future } %>
    </ul>
  </div>

  <div>
    <h3 class="text-2xl font-semibold">Past Events</h3>
    <ul class="list-disc pl-5">
      <%= render partial: 'event_list', locals: { events: @events.past } %>
    </ul>
  </div>
</div>
